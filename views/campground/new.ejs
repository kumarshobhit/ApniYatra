<% layout('layout/boilerplate') -%>

    <body>
        <div class="container">
            <div class="row ">
                <div class=" col-lg-6 offset-3 ">
                    <h1>New homestay</h1>
                    <form action="/campgrounds" method="POST" novalidate class="needs-validation"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input type="text" class="form-control" name="campground[title]" id="title"
                                placeholder="title" required>
                            <div class="valid-feedback">
                                Looks good
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input type="text" class="form-control" name="campground[location]" id="location"
                                placeholder="location" required>
                            <div class="valid-feedback">
                                Looks good
                            </div>
                        </div>
                        <!-- <div class="mb-3">
                            <label class="form-label" for="image">Image</label>
                            <input type="text" class="form-control" name="campground[image]" id="image"
                                placeholder="image url" required>
                            <div class="valid-feedback">
                                Looks good
                            </div>
                        </div> -->
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input form-control" id="image" name="image"
                                    multiple="multiple">
                                <label class="custom-file-label form-label" for="image">Choose file</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text form-label" id="">Upload</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="price">Homestay Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="text" class="form-control" id="price"
                                    aria-label="Amount (to the nearest dollar)" name="campground[price]" required>
                                <div class="valid-feedback">
                                    Looks good
                                </div>
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <div class="input-group">
                                <textarea class="form-control" id="description" aria-label="With textarea"
                                    name="campground[description]" required></textarea>
                                <div class="valid-feedback">
                                    Looks good
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </form>
                    <a href="/campgrounds">All homestays</a>
                </div>
            </div>
        </div>